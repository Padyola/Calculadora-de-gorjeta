<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gorjeta" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="16sp"
        android:text="Digite um valor ex: 36,50"
        android:textAlignment="viewStart"
        android:textColor="#FFAA33"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/percentValue"
        android:layout_width="67dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="9dp"
        android:paddingVertical="3dp"
        android:text="0%"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashValue" />

    <SeekBar
        android:id="@+id/seekBarTip"
        android:layout_width="269dp"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:max="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashValue" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="68dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:paddingVertical="8dp"
        android:text="Gorjeta"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentValue" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp"
        android:paddingHorizontal="8.5dp"
        android:paddingVertical="5dp"
        android:text="Total"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentValue" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cashValue"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:hint="Digite o valor da conta"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tipValue"
        android:layout_width="270dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="392dp"
        android:background="#FFAA33"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:text="R$ 0,00"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="270dp"
        android:layout_height="32dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="452dp"
        android:background="#FFAA33"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:text="R$ 0,00"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>